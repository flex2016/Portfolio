{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Taras Kurilo Portfolio",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/font-awesome.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.min.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flex2016/Portfolio.git"
  },
  "author": "Taras Kurilo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/flex2016/Portfolio/issues"
  },
  "homepage": "https://github.com/flex2016/Portfolio#readme",
  "devDependencies": {
    "autoprefixer": "^9.1.5",
    "concat": "^1.0.3",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0"
  }
}
